<%- include('../adminPartial/header') %>


  <section class="content-main">
    <div class="content-header">
      <h2 class="content-title">Coupons List</h2>
      <div>
        <a href="/admin/addCoupon" type="submit" class="btn btn-primary btn-sm rounded">Add Coupon</a>
      </div>
    </div>
    <div class="card mb-4">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover" id="usertable">
            <thead>
              <tr>
                <th>Code</th>
                <th>Discount Price</th>
                <th>Min Purchase</th>
                <th>Expiry</th>
                <th>Edit</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              <% coupons.forEach((coupon)=>{ %>
                <% if(coupon.isDelete==="NO" ){ %>
                  <tr>
                    <td width="17%">
                      <h6 class="mb-0 title"><%-coupon.couponCode %></h6>
                    </td>
                    <td width="17%">
                      <h6 class="mb-0 title"><%-coupon.couponAmount %></h6>
                    </td>
                    <td width="17%">
                      <h6 class="mb-0 title"><%-coupon.minimumAmount %></h6>
                    </td>
                    <td width="17%">
                      <h6 class="mb-0 title"> <%-coupon.expireDate %></h6>
                    </td>
                    <td width="17%">
                      <div class="">
                        <a href="/admin/editcouponpage?id=<%= coupon._id %>" type="submit"
                          class="btn btn-sm font-sm rounded btn-brand">
                          <i class="material-icons md-edit"></i> Edit
                        </a>
                      </div>
                    </td>
                    <td width="17%">
                      <div class="">
                        <a href="/admin/deletecoupon?id=<%= coupon._id %>"
                          class="btn btn-sm font-sm btn-danger rounded">
                          <i class="material-icons md-delete_forever"></i> Delete
                        </a>

                      </div>
                    </td>
                  </tr>
                  <% } %>
                    <% }) %>
            </tbody>
          </table> <!-- table-responsive.// -->
        </div>
      </div> <!-- card-body end// -->
    </div> <!-- card end// -->


  </section>



  <%- include('../adminPartial/footer') %>