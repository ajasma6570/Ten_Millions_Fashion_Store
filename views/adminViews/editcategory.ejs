<%- include('../adminPartial/header') %>

        <section class="content-main">
            <form action="/admin/editcategory" method="post">
                
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Edit Category</h2>
                       
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="mb-4">
                                <label for="product_title" class="form-label">Name</label>
                                <input type="text" placeholder="<%=categorydata.categoryName%>" class="form-control"  name="categoryName" id="product_title" value="<%=categorydata.categoryName%>">
                                <input type="hidden"    name="id" id="product_title" value="<%=categorydata._id%>">
     
                                <div class="mb-4">
                                    <label for="product_category" class="form-label">Description</label>
                                    <input type="text" placeholder="<%=categorydata.categoryDescription%>" class="form-control" name="categoryDescription"  id="product_category"value="<%=categorydata.categoryDescription%>">
                                </div>

                           
                        </div>
                    </div> <!-- card end// -->
           
                
                </div> 
            </div>
            <div>
                <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button>
                <input  type="submit"  class="btn btn-success rounded " value="update">
            </div>
            </form>
            
        </section>
      
    </main>
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
