			<script>
				// Set the countdown duration in seconds
				const countdownDuration = 70;                   // ***********************************OTP TIMe duration

				// Get the countdown element
				const countdownElement = document.getElementById('countdown');

				// Function to start the countdown
				function startCountdown() {
				let seconds = countdownDuration;

				// Update the countdown element every second
				const countdownInterval = setInterval(() => {
					if (seconds > 0) {
					seconds--;
					countdownElement.textContent = formatTime(seconds);
					} else {
					clearInterval(countdownInterval);
					
					Swal.fire({
						title: "Error",
						text: "OTP expired",
						icon: "error",
						confirmButtonText: "Try again",
						});

						

					$(document).ready(function() {
						console.log("Page loaded");
						var email = $('.email').data('proid');
						
						var data = {
							email: email
						};

						$.ajax({
							url: '/otptimeout',
							method: 'POST',
							data: data,
							success: function(response) {
								if (response.message == "0"){

								
									window.location.href = '/loginWithOtp';
								} 

							},
							error: function(error) {
							// Handle the error here
							}
						});
						});
				

					}
				}, 1000);
				}

				// Function to format time in MM:SS format
				function formatTime(seconds) {
				const minutes = Math.floor(seconds / 60);
				const remainingSeconds = seconds % 60;
				return `${padZero(minutes)}:${padZero(remainingSeconds)}`;
				}

				// Function to add leading zero to a number
				function padZero(number) {
				return number.toString().padStart(2, '0');
				}

				// Start the countdown
				startCountdown();

			</script>

        
