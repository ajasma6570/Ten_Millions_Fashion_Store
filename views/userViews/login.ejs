<!-- Logn page start -->
            <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('/profileimages/login\ background.webp')" >
            	<div class="container" >
            		<div class="form-box" style="border-radius: 5rem;">
            			<div class="form-tab">
	            			<ul class="nav nav-pills nav-fill" role="tablist">
							    <li class="nav-item">
							        <a class="nav-link active font-weight-bold" id="signin-tab-2"  href="#signin-2"  aria-controls="signin-2" aria-selected="true ">LOGIN</a>
							    </li>
							</ul>
							<div class="tab-content">
							    
							    <div class="tab-pane fade show active" id="signin-2" role="tabpanel" aria-labelledby="signin-tab-2">
							    	<form action="login" method="post">
										<span class="text-danger d-flex justify-content-center"><%-locals.title-%></span>
							    		<div class="form-group">
							    			<label for="loginEmail">Your email address *</label>
							    			<input type="email" class="form-control" id="signin-email-2" name="loginEmail" required>
							    		</div>

							    		<div class="form-group">
							    			<label for="loginPassword">Password *</label>
							    			<input type="password" class="form-control" id="signin-password-2" name="loginPassword" required>
							    		</div>
										<span class="text-danger" id="errorMessage"><%-locals.notice-%></span>
							    	
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <button type="submit" class="btn btn-outline-success col-sm-12">
                                                        <span>LOGIN</span>
                                                        <i class="icon-long-arrow-right"></i>
													</button>
                                                </div>
											</form>  
                                                <div class="col-sm-12">
                                                    <a href="loginWithOtp" type="submit" class="btn btn-outline-success col-sm-12 mt-3" >
                                                        <span>LOGIN with OTP</span>
                                                        <i class="icon-long-arrow-right"></i>
                                                    </a>
                                                </div>
                                            </div>
                                     
							    
							    	<div class="form-choice">
								    	<p class="text-center mt-5">OR</p>
                                        <p class="text-center text-dark">Didn,t have an acount?</p>
								    	<div class=" col-sm-12"> 
                                            
							    			<a href="signup" type="submit" class="btn btn-outline-primary col-sm-12 ">
			                					<span >Create Account</span>
                                            </a>	
                                            	                				
							    		</div><!-- End .form-footer -->
							    	</div><!-- End .form-choice -->
							    </div><!-- .End .tab-pane -->
							</div><!-- End .tab-content -->
						</div><!-- End .form-tab -->
            		</div><!-- End .form-box -->
            	</div><!-- End .container -->
            </div><!-- End .login-page section-bg -->
<!-- Logn page start -->

			
